{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LA-Bench Output Format",
  "description": "JSON schema for LA-Bench experimental procedure output format. Each line in the JSONL file must conform to this schema.",
  "type": "object",
  "required": ["id", "output"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the experimental entry (e.g., 'public_test_1', 'private_test_42')",
      "pattern": "^(public|private)_test_\\d+$",
      "examples": [
        "public_test_1",
        "public_test_10",
        "private_test_1"
      ]
    },
    "output": {
      "type": "object",
      "required": ["procedure_steps"],
      "properties": {
        "procedure_steps": {
          "type": "array",
          "description": "Ordered list of detailed experimental procedure steps",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["id", "text"],
            "properties": {
              "id": {
                "type": "integer",
                "description": "Sequential step number starting from 1",
                "minimum": 1
              },
              "text": {
                "type": "string",
                "description": "Detailed description of the experimental step in Japanese",
                "minLength": 10
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
