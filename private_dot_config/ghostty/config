keybind = global:cmd+shift+i=toggle_visibility

# タブ移動
keybind = cmd+right=next_tab
keybind = cmd+left=previous_tab

# ペイン移動
keybind = cmd+shift+right=goto_split:right
keybind = cmd+shift+left=goto_split:left
keybind = cmd+shift+up=goto_split:up
keybind = cmd+shift+down=goto_split:down

keybind = cmd+c=unbind
keybind = cmd+c=text:\x1b

keybind = cmd+c=copy_to_clipboard
# 貼り付けを Cmd+V に割り当て（macOS）
keybind = cmd+v=paste_from_clipboard

shell-integration = fish

theme = Catppuccin Mocha
maximize = true
font-family = HackGen Console NF
background-opacity = 0.8
background-blur = true
macos-titlebar-style = tabs
font-size = 13
window-padding-x = 20
window-padding-y = 0,10
adjust-cell-height = 4
font-thicken = true
window-padding-balance = true
cursor-style=block
keybind = shift+enter=text:\x1b\r
